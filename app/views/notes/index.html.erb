<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>User id</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.user_id %></td>
        <td><%= note.title %></td>
        <td><%= note.content %></td>
        <!--<td>Tags: <%= note.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></td>-->
        <td>Tags: <%= raw note.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></td>


        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
